{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"taskName": "make all",
			"options": {
				"cwd": "${workspaceRoot}/src/"
			},
			"command": "make"
		},
		{
			"taskName": "make check_db",
			"options": {
				"cwd": "${workspaceRoot}/src/"
			},
			"command": "g++",
			"args": [
				"-Wall",
				"-O3",
				"-g",
				"-o",
				"check_db",
				"krakendb.o",
				"quickfile.o", 
				"krakenutil.o", 
				"seqreader.o",
				"check_db.cpp"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}